	<% provide(:title, 'Sign up') %>
<h2 class="center">Create your account</h2>
<br>

  <% if @reviewer.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@reviewer.errors.count, "error") %> prohibited this account from being created:</h4>

      <ul>
      <% @reviewer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-3 col-md-offset-4">
    <%= form_for(@reviewer) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Renter Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>