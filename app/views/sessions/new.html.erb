<h1 class = "center"> Welcome to Book Reviews </h1>
<h3 class= "center">Login to continue</h3>
<h3 class= "center">New User? <%= link_to "Sign up" , signup_path %> </h3>

<div class="row">
  <div class="col-md-3 col-md-offset-4">
    <%= form_for(:reviewer, url:sessions_path) do |f| %>


    <%= f.label :name %><br>
    <%= f.text_field :name %>
  
    <%= f.label :password %><br>
    <%= f.password_field :password %>
    <%= f.submit "Login", class: "btn btn-primary" %>
  </div>
 </div>



<% end %>